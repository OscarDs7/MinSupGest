<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2FC8E2"
    tools:context=".MenuAdminActivity">

    <ImageButton
        android:id="@+id/imgbStatistics"
        android:layout_width="190dp"
        android:layout_height="110dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:contentDescription="Estadísticas"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_estadisticas"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Estadísticas"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbStatistics" />

    <ImageButton
        android:id="@+id/imgbInventary"
        android:layout_width="190dp"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:contentDescription="Inventario"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatistics"
        app:srcCompat="@drawable/ic_inventario"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtInventary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Inventario"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbInventary" />

    <ImageButton
        android:id="@+id/imgbComments"
        android:layout_width="192dp"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:contentDescription="Recomendaciones"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInventary"
        app:srcCompat="@drawable/ic_recomendaciones" />

    <TextView
        android:id="@+id/txtComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Recomendaciones"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbComments" />

    <ImageButton
        android:id="@+id/imgbEmployes"
        android:layout_width="192dp"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:contentDescription="Empleados"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtComments"
        app:srcCompat="@drawable/ic_empleados" />

    <TextView
        android:id="@+id/txtEmployes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Empleados"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbEmployes" />
</androidx.constraintlayout.widget.ConstraintLayout>